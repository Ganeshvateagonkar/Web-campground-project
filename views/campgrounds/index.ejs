  <%layout('layouts/boilerplate')%>;

  <div id="cluster-map"></div>
    <h1>All campgrounds</h1>
    <a href="/campgrounds/new">make new campground</a>
 
        <% for(let camp of campgrounds){ %> 

          <div class="card mb-3" >
            <div class="row">
              <div class="col-md-4">
                <% if(camp.images.length) {%> 
                <img class="img-fluid" src="<%=camp.images[0].url%>" alt="">
                <% }else{ %> 
                  <img class="img-fluid" src="https://res.cloudinary.com/dxjnusnyd/image/upload/v1627405645/yelpCamp/hjjzh0xbbh8byho5vcns.jpg" alt="">
                  <% } %> 
              </div>
              <dic class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%=camp.title%></h5>
                  <p class="card-text"><%=camp.description%></p>
                  <p class="card-text">
                    <small class="text-muted"><%=camp.location%></small>
                  </p>
                  <a  class="btn btn-primary" href="/campgrounds/<%=camp._id%>">view <%=camp.title%></a>
                </div>
              </dic>
            </div>
          </div>
           
        <% } %> 
        <script>
          const mapToken='<%-process.env.MAPBOX_TOKEN%>';
          const campgrounds={features: <%-JSON.stringify(campgrounds)%>};
          
        
        </script>
